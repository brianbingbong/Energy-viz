{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "CO2 Fractional Change 2015 - 2016",
  "description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
  "data": {
      "url": "https://raw.githubusercontent.com/brianbingbong/Energy-viz/main/data/worldometers_energy.csv"
  },
  "transform": [
      {
          "calculate": "datum['co2_emiss_one_year_change'] > 0 ? true : false",
          "as": "greener"
      }
  ],
  "vconcat": [
      {
          "height": 400,
          "width": "container",
          "mark": "bar",
          "transform": [{
              "filter": {"param": "brush"}
          }],
          "encoding": {
              "x": {
                  "field": "name",
                  "type": "nominal",
                  "axis": {
                    "labelAngle": 75,
                    "labelFontSize": 8
                  },
                  "title": "Country",
                  "sort": "y"
              },
              "y": {
                  "field": "co2_emiss_one_year_change",
                  "type": "quantitative",
                  "axis": {
                      "gridColor": {
                          "condition": {
                              "test": "datum.value === 0",
                              "value": "black"
                          },
                          "value": "#ddd"
                      }
                  },
                  "scale": {
                    "domain": [
                      -0.08,
                      0.20
                    ]
                  },
                  "title": "Fractional CO2 Change From 2015"
              },
              "color": {
                  "field": "greener",
                  "scale": {
                    "range": ["#2171b5", "#d94701"]
                  },
                  "legend": null
              },
              "tooltip": [
                {
                  "field": "name",
                  "title": "Country"
                },
                {
                  "field": "co2_emiss_one_year_change",
                  "title": "CO2 Fractional Change"
                }
              ]
          }
      },
      {
          "height": 50,
          "width": "container",
          "params": [{
              "name": "brush",
              "select": {
                  "type": "interval",
                  "encodings": ["x"]
              }
          }],
          "mark": {
            "type": "bar",
            "opacity": 0.4
          },
          "encoding": {
              "x": {
                  "field": "name",
                  "type": "nominal",
                  "axis": null,
                  "sort": "y"
              },
              "y": {
                  "field": "co2_emiss_one_year_change",
                  "type": "quantitative",
                  "axis": null
              },
              "color": {
                "field": "greener",
                "scale": {
                  "range": ["#2171b5", "#d94701"]
                },
                "legend": null
              }
          }
      }
  ],
  "config": {
    "background": "#e5f5e0"
  }
}