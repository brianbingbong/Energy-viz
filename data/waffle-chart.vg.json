{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Countries Using Renewable Energy"
    },
    "description": "A Rectangular Unit-Chart",
    "data": {
        "url": "https://raw.githubusercontent.com/brianbingbong/Energy-viz/main/data/renewable_energy_user_count.csv"
    },
    "width": "container",
    "height": 280,
    "params": [
        {
          "name": "re_above",
          "value": 0,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 0.99,
            "step": 0.01,
            "name": "Min Renewable/Nuclear Proportion: "
          }
        }
    ],
    "transform": [
        {
            "calculate": "ceil(datum.id/ 10)",
            "as": "X"
        },
        {
            "calculate": "datum.id - (datum.X - 1) *10",
            "as": "Y"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "circle",
                "fillOpacity": 0.1,
                "stroke": "orange",
                "size": 400,
                "strokeWidth": 0.5
            },
            "encoding": {
                "x": {
                    "field": "X",
                    "type": "ordinal",
                    "axis": null
                },
                "y": {
                    "field": "Y",
                    "type": "ordinal",
                    "axis": null
                },
                "color": {
                    "value": "#cb181d"
                },
                "tooltip": [{
                    "field": "name",
                    "type": "nominal"
                },
                {
                    "field": "re_nuclear",
                    "type": "quantitative",
                    "title": "Renewable/Nuclear Proportion"
                }]
            }
        },
        {
            "mark": {
                "type": "circle",
                "size": 500,
                "strokeOpacity": 0
            },
            "transform": [
                {"filter": "datum.re_nuclear > re_above"}
            ],
            "encoding": {
                "x": {
                    "field": "X",
                    "type": "ordinal",
                    "axis": null
                },
                "y": {
                    "field": "Y",
                    "type": "ordinal",
                    "axis": null
                },
                "color": {
                    "value": "#2171b5"
                },
                "tooltip": [{
                    "field": "name",
                    "type": "nominal"
                },
                {
                    "field": "re_nuclear",
                    "type": "quantitative",
                    "title": "Nuclear/Renewable %",
                    "format": ".0%"
                }]
            }
        }
    ],
    "config": {
        "background": "#e5f5e0",
        "style": {
          "cell": {
            "stroke": "transparent"
          }
        }
      }
}